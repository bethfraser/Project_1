/**** LINEUP and SCHEDULE PAGE ******/
.venue {
  font-size: 2.5em;
  font-weight: bold;
  border-bottom: 2px solid grey;
  border-top: 2px solid grey;
  margin-bottom: 20px;
}

li.venue_name {
  width: 100%;
  text-align: center;
  font-size: 2em;
  list-style: none;
}

span.venue_name_text {
  display: inline-block;
  width: 75%;
  border-bottom: 1px solid lightgrey; 
  margin-bottom: 20px; 
}

.field_with_errors {
  display: inline-block;
  color: red;
}

.days li, li.date {
  width: 25%;
  display: inline-block;
  vertical-align: top;
  padding: 1px;

}

.user-days li {
  width: 100%;
  display: inline-block;
  vertical-align: top;
  padding: 1px;
}

ul.days, ul.user-days {
  text-align: center;
}


ul {
  display: inline-block;
  padding: 0;
  margin: 0;
  width: 100%;
}

ul.timetable {
  margin: 0 auto;
  text-align: center;
  padding: 0;
}


.date {
  font-size: 3rem;
}

.date h1 {
  font-size: 8rem;
  margin: 1rem;
}

.day-timetable {
  margin: 0 auto;
  max-width: 85%;
  text-align: center;
}

.each-act:first-child {
  font-weight:bold;
}

span.time-hover {
  display: none;
  font-size: 2.5rem;
}

.each-time:hover  span {
  display: inline-block;
}

.lineup {
  font-size: 2rem;
}

/*** DAY PAGES NAVIGATION ****/

.lineup-nav div {
  display: inline-block;
}

.lineup-nav {
  text-align: center;
  font-size: 4rem;
}

.lineup-nav a {
  text-decoration: none;
  padding: 10px;
  border-radius: 25px;
  background-color:#67bde2;
  color: white;
}

.selected a {
  background-color: grey;
}

/*** ADD TO SCHEDULE STARS ****/


.schedule, .unschedule {
  background-repeat: no-repeat;
  background-size: cover;
  background-color: #ededed;
  border: 0;
  padding: 0;
  min-width: 36px;
  height: 36px;
}

.schedule:hover {
  background-image: url(<%= asset_path 'rate.png' %>);
}

.schedule {
  background-image: url(<%= asset_path 'bookmark45.png' %>);
}

.unschedule {
  background-image: url(<%= asset_path 'rate.png' %>);
}

.unschedule:hover {
  background-image: url(<%= asset_path 'bookmark45.png' %>);
}

.schedule_form, form.button_to {
  display: inline-block;
}

.timetable_image {
  width: 75%;
}

/******* ACT PROFILES *******/

.add-button {
  color: #be332a;
  background: none;
  border: 0;
  font-family: 'Montserrat';
  font-weight: bold;
}

.add-button:hover {
  color: black;
}

.act-image {
  max-width: 80%;
  margin-right: 20px;
  margin-bottom: 20px;
  border-radius: 25px;
}

.act-main {
  padding-left: 20px;
}

.act-details {
  display: block;
  clear: both;
  padding-left: 20px;
}


/***** USER IMAGES ******/

.user-image-thumb {
  border-radius: 50%;
  margin-right: 5px;
}

.user-image-medium {
  border-radius: 25px;
}