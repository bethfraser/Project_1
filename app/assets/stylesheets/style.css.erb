/********** UNIVERSAL STYLES **********/

header, .main, .logo, .nav_buttons {
  padding: 10px 10px;
}

* {
  font-family: 'Arvo', serif;

}

.main, footer {
  font-size: 3rem;
  width: 100%;
}

footer {
  text-align: center;
}


/********** HEADER **********/

header {
  height: 60px;
  background-color: lightgrey;
  font-size: 3rem;
}

.login {
  float: right;
  line-height: 60px;
  display: inline-block;
}

nav {
  float: left;
  line-height: 60px;
  display: inline-block;
}

/********** NAVIGATION **********/

.nav-buttons {
  font-size: 4rem;
  text-align: center;
  margin: 60px 0 20px 0;
}

.nav-buttons a {
  font-size: 5rem;
  display: inline-block;
  margin-bottom: 50px;
  width: 75%;
  background-color: skyblue;
  padding: 20px;
  text-decoration: none;
  border-radius: 30px;
}

.nav-buttons a:last-child {
  margin-bottom: 0px;
}

.logo {
  text-align: center;
  background-color: lavender;
  padding: 20px;
}

.logo, .logo a {
  font-size:9rem;
  text-decoration: none;
  font-family: 'Caveat Brush', cursive;
}

/********** INDEX PAGE **********/

.home-box {
  width: 100%;
  text-align: center;
}

.box {
  width: 40%;
  margin: 30px 30px;
  display: inline-block;
  font-size: 6rem;
  background-color: pink;
  height: 350px;
  border-radius: 30px;
}

.box a {
  text-decoration: none;
  padding: 20px;
  line-height: 350px;
}

/********** ACTS PAGE **********/

form {

}
.filter select  {
 background: transparent;
 width: 340px;
 padding: 5px;
 font-size: 3rem;
 font-family: 'Arvo';
 line-height: 3rem;
 border: 0;
 border-radius: 0;
 -webkit-appearance: none;

}

.filter {
  width: 368px;
  overflow: hidden;
  background: url('https://cdn3.iconfinder.com/data/icons/google-material-design-icons/48/ic_keyboard_arrow_down_48px-128.png') no-repeat right #ddd;
  border: 1px solid #fff;
  display: inline-block;
  vertical-align: middle;
}

.filter-button {
  padding: 5px;
  font-size: 3rem;
  font-family: 'Arvo';
  line-height: 3rem;
  display: inline-block;
  vertical-align: middle;
  border: 0;
  color: white;
  background-color: grey;
}




.venue {
  font-size: 2.5em;
  font-weight: bold;
  border-bottom: 2px solid grey;
  border-top: 2px solid grey;
  margin-bottom: 20px;
}

.field_with_errors {
  display: inline-block;
  color: red;
}

li {
  width: 25%;
  display: inline-block;
  vertical-align: top;
  padding: 1px;
}

ul.days {
  text-align: center;
}

li.venue_name {
  width: 100%;
  text-align: center;
}

ul {
  display: inline-block;
  padding: 0;
  margin: 0;
  width: 100%;
}

ul.timetable {
  margin: 0 auto;
  text-align: center;
  padding: 0;
}

.schedule, .unschedule {
  background-repeat: no-repeat;
  background-size: cover;
  background-color: white;
  border: 0;
  padding: 0;
  min-width: 46px;
  height: 46px;
}

.date {
  font-size: 3rem;
}

.date h1 {
  font-size: 8rem;
  margin: 1rem;
}

.day-timetable {
  margin: 0 auto;
  max-width: 85%;
  text-align: center;
}

.each-act:first-child {
  font-weight:bold;
}

.lineup {
  font-size: 2rem;
}

/*** DAY PAGES NAVIGATION ****/

.lineup-nav div {
  display: inline-block;
}

.lineup-nav {
  text-align: center;
  font-size: 4rem;
}

.lineup-nav a {
  text-decoration: none;
  padding: 10px;
  border-radius: 25px;
  background-color:lavender;
}

.selected a {
  background-color: pink;
}

/*** ADD TO SCHEDULE STARS ****/

.schedule:hover {
  background-image: url(<%= asset_path 'rate.png' %>);
}

.schedule {
  background-image: url(<%= asset_path 'bookmark45.png' %>);
}

.unschedule {
  background-image: url(<%= asset_path 'rate.png' %>);
}

.unschedule:hover {
  background-image: url(<%= asset_path 'bookmark45.png' %>);
}

.schedule_form, form.button_to {
  display: inline-block;
}

.timetable_image {
  width: 75%;
}