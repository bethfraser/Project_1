/********** UNIVERSAL STYLES **********/

header, .main, .logo, .nav_buttons {
  padding: 10px 20px;
}

* {
  font-family: 'Helvetica', serif;
}

html {
  font-size: 16px;
}


.main, footer {
  font-size: 3rem;
}

.main, body {
  background-color: #e3e3e3;
}

footer {
  text-align: center;
  font-size: 2.8em;
}

h4 {
  margin: 5px 0;
}


/********** HEADER **********/

header {
  height: 60px;
  font-size: 3em;  
}

header, footer {
  background-color: #9ad3de;
  line-height: 60px;
  color: grey;
}

header a, footer a {
  color: white;
  text-decoration: none;
}

.login {
  float: right;
  display: inline-block;
}

nav {
  float: left;
  display: inline-block;
  vertical-align: middle;
}

/********** FOOTER **********/

html, body {
  height: 100%;
}
.page-wrap {
  min-height: 100%;
  /* equal to footer height */
  margin-bottom: -60px; 
}
.page-wrap::after {
  content: " ";
  display: block;
}
footer, .page-wrap::after {
  height: 60px; 
}

footer {
  text-align: center;
  width: 100%;

}

/********** NAVIGATION **********/

.nav-buttons {
  font-size: 4rem;
  text-align: center;
  margin: 60px 0 20px 0;
}

.nav-buttons a {
  font-size: 5rem;
  display: inline-block;
  margin-bottom: 50px;
  width: 75%;
  background-color: #89bdd3;
  padding: 20px;
  text-decoration: none;
  border-radius: 30px;
  color: white !important;
  font-weight: normal !important;
}

.nav-buttons a:last-child {
  margin-bottom: 0px;
}

.logo {
  text-align: center;
  background-color: #89bdd3;
  padding: 10px;
}

.logo, .logo a {
  font-size:9rem;
  color: white;
  text-decoration: none;
  text-shadow: 3px 3px 3px black;
  font-family: 'Trebuchet MS', cursive;
}

/********** INDEX PAGE **********/

.home-box {
  text-align: center;
}

.box {
  width: 40%;
  margin: 30px 30px;
  display: inline-block;
  font-size: 6rem;
  background-color:   #9ab1de;
  height: 350px;
  border-radius: 30px;
}

.box a {
  text-decoration: none;
  padding: 20px;
  line-height: 350px;
  color: white !important;
}

.box-1 a:hover, .box-2 a:hover, .box-3 a:hover, .box-4 a:hover {
  color: lightgrey !important;
}

.mobile-lineup {

}

.big-lineup {
  display:none;
}

/**** MAIN SECTION ******/

.main a {
  color:  #9ab1de;
  text-decoration: none;
  font-weight: bold;
}

.main a:hover {
  color: black;
}

@media all and (min-device-width: 750px) and (min-width: 950px) {
  .mobile-lineup {
    display:none;
  }

  .big-lineup {
    display:inline;
  }

  ul.user-days li {
    width: 25%;
    display: inline-block;
    vertical-align: top;
    padding: 1px;
  }

  .schedule, .unschedule {
    width: 26px;
    height: 26px;
    vertical-align: middle;
  }

  .time-hover {
    line-height: 26px;
  }


}

@media screen and (min-device-width: 750px) and (min-width: 750px) {

  html {
    font-size: 6px;
  }

  header {
    height: 30px;
    line-height: 30px;
    font-size: 3em;
  }

  .logo a {
    font-size: 96px;
  }

  .nav-buttons {
    width: 90%;
    margin: 0 auto;
  }

  .nav-buttons a {
    width: 35%;
    margin: 0px 20px 20px 20px;
  }

  img.act-image {
    max-width: 40%;
    float: right;
    margin: 20px;
    border-radius: 25px;
 
  }

  .box {
    border: 10px double white;

  }


    .box a {
      text-shadow: 3px 3px 10px black;
      font-size: 10rem;
      padding: 100px;
    }


  }



  /********** ACTS PAGE **********/

  form {

  }

  .each-time a {
    color:black;
  }

  .each-time:first-child a {
    font-size: 2em;
    text-transform: uppercase;
  }

  .each-time a {
    font-size: 1.5em;
  }

  .filter select  {
   background: transparent;
   width: 340px;
   padding: 15px;
   font-size: 3.5rem;
   font-family: 'Arvo';
   line-height: 3rem;
   border: 0;
   border-radius: 0;
   /*-webkit-appearance: none;*/

 }

 .filter {
  width: 350px;
  overflow: hidden;
  background: #ddd;
  border: 0px solid #fff;
  display: inline-block;
  vertical-align: middle;
  margin-top: 10px;
}

.filter-button {
  padding: 5.5px;
  font-size: 3rem;
  font-family: 'Arvo';
  line-height: 3rem;
  display: inline-block;
  vertical-align: middle;
  border: 0;
  color: white;
  background-color: grey;
  margin-top: 10px;
}


/**** LINEUP and SCHEDULE PAGE ******/
.venue {
  font-size: 2.5em;
  font-weight: bold;
  border-bottom: 2px solid grey;
  border-top: 2px solid grey;
  margin-bottom: 20px;
}

li.venue_name {
  width: 100%;
  text-align: center;
  font-size: 2em;
  list-style: none;
}

span.venue_name_text {
  display: inline-block;
  width: 75%;
  border-bottom: 1px solid lightgrey; 
  margin-bottom: 20px; 
}

.field_with_errors {
  display: inline-block;
  color: red;
}

.days li, li.date {
  width: 25%;
  display: inline-block;
  vertical-align: top;
  padding: 1px;

}

.user-days li {
  width: 100%;
  display: inline-block;
  vertical-align: top;
  padding: 1px;
}

ul.days, ul.user-days {
  text-align: center;
}


ul {
  display: inline-block;
  padding: 0;
  margin: 0;
  width: 100%;
}

ul.timetable {
  margin: 0 auto;
  text-align: center;
  padding: 0;
}


.date {
  font-size: 3rem;
}

.date h1 {
  font-size: 8rem;
  margin: 1rem;
}

.day-timetable {
  margin: 0 auto;
  max-width: 85%;
  text-align: center;
}

.each-act:first-child {
  font-weight:bold;
}

span.time-hover {
  display: none;
  font-size: 2.5rem;
}

.each-time:hover  span {
  display: inline-block;
}

.lineup {
  font-size: 2rem;
}

/*** DAY PAGES NAVIGATION ****/

.lineup-nav div {
  display: inline-block;
}

.lineup-nav {
  text-align: center;
  font-size: 4rem;
}

.lineup-nav a {
  text-decoration: none;
  padding: 10px;
  border-radius: 25px;
  background-color:#67bde2;
  color: white;
}

.selected a {
  background-color: #be332a;
}

/*** ADD TO SCHEDULE STARS ****/


.schedule, .unschedule {
  background-repeat: no-repeat;
  background-size: cover;
  background-color: #fefbe0;
  border: 0;
  padding: 0;
  min-width: 46px;
  height: 46px;
}

.schedule:hover {
  background-image: url(<%= asset_path 'rate.png' %>);
}

.schedule {
  background-image: url(<%= asset_path 'bookmark45.png' %>);
}

.unschedule {
  background-image: url(<%= asset_path 'rate.png' %>);
}

.unschedule:hover {
  background-image: url(<%= asset_path 'bookmark45.png' %>);
}

.schedule_form, form.button_to {
  display: inline-block;
}

.timetable_image {
  width: 75%;
}

/******* ACT PROFILES *******/

.add-button {
  color: #be332a;
  background: none;
  border: 0;
  font-family: 'Arvo';
  font-weight: bold;
}

.add-button:hover {
  color: black;
}

.act-image {
  max-width: 80%;
  margin-right: 20px;
  margin-bottom: 20px;
  border-radius: 25px;
}

.act-main {
  padding-left: 20px;
}

.act-details {
  display: block;
  clear: both;
  padding-left: 20px;
}


/***** USER IMAGES ******/

.user-image-thumb {
  border-radius: 50%;
  margin-right: 5px;
}

.user-image-medium {
  border-radius: 25px;
}