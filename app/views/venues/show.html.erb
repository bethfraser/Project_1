<h2><%= @venue.name %></h2>

<% if @venue.venue_image %>
<%= image_tag(@venue.venue_image, class: "act-image") %><br>
<% end %>
<%= @venue.html %><br><br>
<h4>Location:</h4>
<%= @venue.location %><br><br>
<h4>Times:</h4>
<% @timeslots.each do |timeslot| %>
  <%= timeslot.start_time.strftime("%A %l:%M %p") %> - <%= timeslot.end_time.strftime("%l:%M %p")  %>, <%= timeslot.act.name %> 
  <% if can? :update, Timeslot %><%= link_to 'Edit', edit_event_timeslot_path(@event, timeslot) %> - 
  <% end %>
  <% if can? :delete, Timeslot %>
  <%= link_to 'Delete', event_timeslot_path(@event, timeslot), method: :delete, data: {confirm: 'Are you sure you want to delete this time slot?'} %><br>
  <% end %><br>
<% end %>
<br>
<%= link_to 'Back', :back %>
<br><br>

<% if can? :update, Venue %>
<%= link_to "Edit Stage Profile", edit_event_venue_path(@event, @venue) %> -
<% end %> 
<% if can? :create, Timeslot %> 
<%= link_to "Add Performance Times", {:controller => "timeslots", :action => "new", :venue_id => @venue.id } %> 
<% end %>