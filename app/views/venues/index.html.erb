<h1>Stages</h1>
<% if can? :create, Venue %>
<%= link_to 'Add Stage', new_venue_path %><br><br>
<% end %>
<% @venues.each do |venue| %>
<%= link_to venue.name, venue_path(venue) %>
<% if can? :update, Venue %>
<%= link_to 'Edit', edit_venue_path(venue) %>
<% end %>
<% if can? :delete, Venue %>
<%= link_to 'Delete', venue_path(venue), method: :delete, data: {confirm: 'Are you sure you want to delete this venue and all of its time slots?'} %>
<% end %>
<br><br>
<% end %>