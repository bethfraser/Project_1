<h1>Stages</h1>
<% if can? :create, Venue %>
<%= link_to 'Add Stage', new_event_venue_path(@event) %><br><br>
<% end %>
<% @venues.each do |venue| %>
<%= link_to venue.name, event_venue_path(@event, venue) %>
<% if can? :update, Venue %>
/ <%= link_to 'Edit', edit_event_venue_path(@event, venue) %>
<% end %>
<% if can? :delete, Venue %>
/ <%= link_to 'Delete', event_venue_path(@event, venue), method: :delete, data: {confirm: 'Are you sure you want to delete this venue and all of its time slots?'} %>
<% end %>
<br><br>
<% end %>
<br>
<%= link_to 'Back', :back %>