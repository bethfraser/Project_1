<h1>Keywords</h1>

<%= link_to 'Add Keyword', new_event_keyword_path(@event) %><br><br>
<% @keywords.each do |keyword| %>
<%= link_to keyword.name.capitalize, event_keyword_path(@event, keyword) %> 
/ <%= link_to 'Edit', edit_event_keyword_path(@event, keyword) %>
/ <%= link_to 'Delete', event_keyword_path(@event, keyword), method: :delete, data: {confirm: 'Are you sure you want to delete this keyword?'} %>
<br>
<% end %>
