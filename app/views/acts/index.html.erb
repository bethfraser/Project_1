<h1>Acts A-Z</h1>
<% if can? :create, Act %>
<%= link_to 'Add Act', new_event_act_path %><br><br>
<% end %>

Filter by tag:<br> 

<%= form_tag({controller: "keywords", action: "filter"}, method: "get") do %>

<div class="filter">
<%= select_tag(:keyword_select, options_for_select(@keywords.each.collect { |k| [ k.name, k.id ] })) %>
</div>
<%= hidden_field_tag :event_id, @event.id %>
<%= submit_tag(value = 'Go', class: "filter-button") %>
<% end %>


<br>


<% @acts.each do |act| %>
<%= link_to act.name, event_act_path(@event, act) %>
<% if can? :update, Act %>
/ <%= link_to 'Edit', edit_event_act_path(@event, act) %>
<% end %>
<% if can? :delete, Act %>
/ <%= link_to 'Delete', event_act_path(@event, act), method: :delete, data: {confirm: 'Are you sure you want to delete this act and all of its time slots?'} %><% end %>
<br><br>

<% end %>
<br>
<%= link_to 'Back', :back %>
