<h1>Acts A-Z</h1>
<%= link_to 'Add Act', new_act_path %><br><br>
<% @acts.each do |act| %>
<%= link_to act.name, act_path(act) %>
<%= link_to 'Edit', edit_act_path(act) %>
<%= link_to 'Delete', act_path(act), method: :delete, data: {confirm: 'Are you sure you want to delete this act and all of its time slots?'} %><br><br>
<% end %>
